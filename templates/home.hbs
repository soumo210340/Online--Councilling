<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/css/home.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
  <title>Home</title>
</head>
<body>
  <!-- Background Video (optional) -->
  <video id="video" autoplay loop muted>
    <source src="https://www.example.com/path/to/your/video.mp4" type="video/mp4">
    Your browser does not support the video tag.
  </video>

  <div class="container">
    <!-- User Info Section -->
    <div class="info">
      <div class="thumbnail">
        <i class="fas fa-user"></i>
      </div>
      <h1>Welcome {{user.name}}</h1> 
      <p>Email: {{#if user.email}}{{user.email}}{{else}}N/A{{/if}}</p>
      <p>Total Marks: {{#if user.totalMarks}}{{user.totalMarks}}{{else}}N/A{{/if}}</p>
      <p>Passout Year: {{#if user.passoutYear}}{{user.passoutYear}}{{else}}N/A{{/if}}</p>
      <p>Father's Name: {{#if user.fatherName}}{{user.fatherName}}{{else}}N/A{{/if}}</p>
      
      <!-- Colleges Table -->
      <h2>Eligible Colleges</h2>
      <form action="/submit-preferences" method="POST" id="preferencesForm">
        <input type="hidden" name="userId" value="{{user._id}}">

        <table>
          <thead>
            <tr>
              <th>College Name</th>
              <th>Location</th>
              <th>Courses</th>
              <th>Established Year</th>
              <th>Marks Range</th>
              <th>Select</th>
            </tr>
          </thead>
          <tbody>
            {{#each colleges}}
              <tr>
                <td>{{this.name}}</td> <!-- College Name -->
                <td>{{this.location}}</td> <!-- College Location -->
                <td>{{#if this.courses}}{{this.courses}}{{else}}No courses available{{/if}}</td> <!-- Available Courses -->
                <td>{{this.establishedYear}}</td> <!-- Established Year -->
                <td>{{this.marksRange}}</td> <!-- Marks Range -->
                <td>
                  <button type="button" class="select-btn" data-id="{{this._id}}">Select</button>
                </td>
              </tr>
            {{/each}}
          </tbody>
        </table>
        
        <!-- Hidden input to store selected colleges -->
        <input type="hidden" name="selectedColleges" id="selectedColleges" value="[]">
        <button type="submit" id="submit-btn" disabled>Submit Preferences</button>
      
        
      </form>
    </div>
  </div>

  <!-- Include the JavaScript File -->
  <script src="/js/home.js"></script>
</body>
</html>
